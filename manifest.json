{
  "manifest_version": 3,
  "name": "SortTube",
  "version": "1.0",
  "description": "Reorder and reverse YouTube playlist videos",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SortTube"
  }
}